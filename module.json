{
	"comment": "A mail client module.",
	"name": "mail", 
	"description": "A mail client module.",
    "connectedApp":"default",
	"files": ["CarNotificationMessage.php", "Car.php"],
    "links":[{
        "href":"/mail",
        "label": "Send Mail",
        "isSublink": true,
        "adminLink": true,
        "parentLinkId":"car"
    }],
	"routes": {
        "mail":{
            "callback":"compose",
            "content-type":"text/html",
            "authorization":"webserver",
            "access": "is_authenticated"
        },
        "mail/send":{
            "callback": "sendMail",
            "content-type":"text/html",
            "authorization":"webserver",
            "access": "is_authenticated"
        },
        "mail/compose/custom-fields/%s": {
            "callback": "getCustomMailFields",
            "content-type":"text/partial+html"
        },
        "mail/compose/preview/%s": {
            "callback": "getPreview",
            "content-type":"text/partial+html"
        }
    }
}

