{
	"comment": "A mail client module.",
	"name": "mail", 
	"description": "A mail client module.",
    "connectedApp":"default",
	"files": [],
    "links":[{
        "href":"/mail",
        "label": "Send Mail"
    }],
	"routes": {
        "mail":{
            "callback":"compose",
            "content-type":"text/html",
            "authorization":"webserver",
            "access": "is_admin"
        },
        "mail/compose":{
            "callback":"compose",
            "content-type":"text/html",
            "authorization":"webserver",
            "access": "is_admin"
        },
        "mail/compose/fields/%s": {
            "callback": "getFields",
            "content-type":"text/partial+html"
        },
        "mail/preview/%s": {
            "callback": "previewMail",
            "content-type":"text/partial+html"
        },
        "mail/test/%s":{
            "callback": "testMail",
            "content-type":"text/html",
            "authorization":"webserver",
            "access": "is_admin"
        },
        "mail/send/%s":{
            "callback": "sendMail",
            "content-type":"text/html",
            "authorization":"webserver",
            "access": false
        }
    }
}

